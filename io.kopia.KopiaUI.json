{
    "app-id": "io.kopia.KopiaUI",
    "base": "org.electronjs.Electron2.BaseApp",
    "base-version": "23.08",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "23.08",
    "sdk": "org.freedesktop.Sdk",
    "command": "kopia-ui",
    "separate-locales": false,
    "rename-desktop-file": "kopia-ui.desktop",
    "rename-icon": "kopia-ui",
    "finish-args": [
        "--share=ipc",
        "--socket=wayland",
        "--socket=fallback-x11",
        "--socket=pulseaudio",
        "--share=network",
        "--device=dri",
        "--filesystem=host",
        "--filesystem=~/.var/app/",
        "--talk-name=org.kde.StatusNotifierWatcher"
    ],
    "modules": [
        {
            "name": "kopia-ui",
            "buildsystem": "simple",
            "build-commands": [
                "ar x kopia-ui_*.deb",
                "tar xf data.tar.xz",
                "cp -r usr/* opt/* /app",
                "chmod -R a-s,go+rX,go-w /app/KopiaUI",
                "sed -i 's|Exec=.*|Exec=kopia-ui %U|' /app/share/applications/kopia-ui.desktop",
                "install kopia-ui.sh /app/bin/kopia-ui",
                "install -Dm644 io.kopia.KopiaUI.appdata.xml /app/share/appdata/io.kopia.KopiaUI.appdata.xml"
            ],
            "cleanup": [
                "kopia-ui_*.deb",
                "control.tar.gz",
                "data.tar.xz",
                "debian-binary"
            ],
            "sources": [
                {
                    "type": "file",
                    "only-arches": [
                        "x86_64"
                    ],
                    "url": "https://github.com/kopia/kopia/releases/download/v0.16.0/kopia-ui_0.16.0_amd64.deb",
                    "sha256": "65bada2a6613a82624c67ebce138a46b47c19a546aba2300eeb8d9169edf4d53",
                    "x-checker-data": {
                        "type": "json",
                        "url": "https://api.github.com/repos/kopia/kopia/releases/latest",
                        "tag-query": ".tag_name",
                        "tag-pattern": "^([d.]+)$",
                        "version-query": "$tag | sub(\"^v\"; \"\")",
                        "timestamp-query": ".published_at",
                        "url-query": ".assets[] | select(.name==\"kopia-ui_\" + $version + \"_amd64.deb\") | .browser_download_url"
                    }
                },
                {
                    "type": "file",
                    "only-arches": [
                        "aarch64"
                    ],
                    "url": "https://github.com/kopia/kopia/releases/download/v0.16.0/kopia-ui_0.16.0_arm64.deb",
                    "sha256": "588094780d319f15e20e3660885e00ad2043f54c5a9f28a6d2598d0f98e37abc",
                    "x-checker-data": {
                        "type": "json",
                        "url": "https://api.github.com/repos/kopia/kopia/releases/latest",
                        "tag-query": ".tag_name",
                        "tag-pattern": "^([d.]+)$",
                        "version-query": "$tag | sub(\"^v\"; \"\")",
                        "timestamp-query": ".published_at",
                        "url-query": ".assets[] | select(.name==\"kopia-ui_\" + $version + \"_arm64.deb\") | .browser_download_url"
                    }
                },
                {
                    "type": "file",
                    "path": "kopia-ui.sh"
                },
                {
                    "type": "file",
                    "path": "io.kopia.KopiaUI.appdata.xml"
                }
            ]
        }
    ]
}
