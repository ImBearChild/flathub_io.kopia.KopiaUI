{
    "app-id": "io.kopia.KopiaUI",
    "base": "org.electronjs.Electron2.BaseApp",
    "base-version": "21.08",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "21.08",
    "sdk": "org.freedesktop.Sdk",
    "command": "kopia-ui",
    "separate-locales": false,
    "rename-desktop-file": "kopia-ui.desktop",
    "rename-icon": "kopia-ui",
    "finish-args": [
        "--share=ipc",
        "--socket=x11",
        "--socket=pulseaudio",
        "--share=network",
        "--device=dri",
        "--filesystem=host",
        "--talk-name=org.freedesktop.Notifications",
        "--talk-name=org.kde.StatusNotifierWatcher",
        "--own-name=org.kde.StatusNotifierItem-2-1"
    ],
    "modules": [
        {
            "name": "kopia-ui",
            "buildsystem": "simple",
            "build-commands": [
                "ar x kopia-ui_*.deb",
                "tar xf data.tar.xz",
                "cp -r usr/* opt/* /app",
                "chmod -R a-s,go+rX,go-w /app/KopiaUI",
                "sed -i 's|Exec=.*|Exec=kopia-ui %U|' /app/share/applications/kopia-ui.desktop",
                "install kopia-ui.sh /app/bin/kopia-ui",
                "install -Dm644 io.kopia.KopiaUI.appdata.xml /app/share/appdata/io.kopia.KopiaUI.appdata.xml"
            ],
            "cleanup": [
                "kopia-ui_*.deb",
                "control.tar.gz",
                "data.tar.xz",
                "debian-binary"
            ],
            "sources": [
                {
                    "type": "file",
                    "only-arches": [
                        "x86_64"
                    ],
                    "url": "https://github.com/kopia/kopia/releases/download/v0.9.4/kopia-ui_0.9.4_amd64.deb",
                    "sha256": "61f7572b98736f04109a1b746af1ad3b5103fb9c2ed19d763d122dc61004b44a"
                },
                {
                    "type": "script",
                    "dest-filename": "kopia-ui.sh",
                    "commands": [
                        "export TMPDIR=\"$XDG_RUNTIME_DIR/app/$FLATPAK_ID\"",
                        "exec zypak-wrapper /app/KopiaUI/kopia-ui \"$@\""
                    ]
                },
                {
                    "type": "file",
                    "path": "io.kopia.KopiaUI.appdata.xml"
                }
            ]
        }
    ]
}
