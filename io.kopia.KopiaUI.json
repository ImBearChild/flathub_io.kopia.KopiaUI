{
    "app-id": "io.kopia.KopiaUI",
    "base": "org.electronjs.Electron2.BaseApp",
    "base-version": "21.08",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "21.08",
    "sdk": "org.freedesktop.Sdk",
    "command": "kopia-ui",
    "separate-locales": false,
    "rename-desktop-file": "kopia-ui.desktop",
    "rename-icon": "kopia-ui",
    "finish-args": [
        "--share=ipc",
        "--socket=x11",
        "--socket=pulseaudio",
        "--share=network",
        "--device=dri",
        "--filesystem=host",
        "--talk-name=org.freedesktop.Notifications",
        "--talk-name=org.kde.StatusNotifierWatcher",
        "--own-name=org.kde.StatusNotifierItem-2-1"
    ],
    "modules": [
        {
            "name": "kopia-ui",
            "buildsystem": "simple",
            "build-commands": [
                "ar x kopia-ui_*.deb",
                "tar xf data.tar.xz",
                "cp -r usr/* opt/* /app",
                "chmod -R a-s,go+rX,go-w /app/KopiaUI",
                "sed -i 's|Exec=.*|Exec=kopia-ui %U|' /app/share/applications/kopia-ui.desktop",
                "install kopia-ui.sh /app/bin/kopia-ui",
                "install -Dm644 io.kopia.KopiaUI.appdata.xml /app/share/appdata/io.kopia.KopiaUI.appdata.xml"
            ],
            "post-install": [
                "rm /app/share/icons/hicolor/1024x1024/apps/kopia-ui.png"
            ],
            "cleanup": [
                "kopia-ui_*.deb",
                "control.tar.gz",
                "data.tar.xz",
                "debian-binary"
            ],
            "sources": [
                {
                    "type": "file",
                    "only-arches": [
                        "x86_64"
                    ],
                    "url": "https://github.com/kopia/kopia/releases/download/v0.12.1/kopia-ui_0.12.1_amd64.deb",
                    "sha256": "082ddb311dc3792a1bbf8c78c0961a98c1a9dd4d79efdf0a08ac1c9999ba3c63",
                    "x-checker-data": {
                        "type": "json",
                        "url": "https://api.github.com/repos/kopia/kopia/releases/latest",
                        "tag-query": ".tag_name",
                        "version-query": "$tag | sub(\"^v\"; \"\")",
                        "timestamp-query": ".published_at",
                        "url-query": ".assets[] | select(.name==\"kopia-ui_\" + $version + \"_amd64.deb\") | .browser_download_url"
                    }
                },
                {
                    "type": "file",
                    "only-arches": [
                        "aarch64"
                    ],
                    "url": "https://github.com/kopia/kopia/releases/download/v0.12.1/kopia-ui_0.12.1_arm64.deb",
                    "sha256": "f8d38f5faaefa1d5638bd742fc6a1957b059070b2ed82ccb47a2e8fbe71ee43e",
                    "x-checker-data": {
                        "type": "json",
                        "url": "https://api.github.com/repos/kopia/kopia/releases/latest",
                        "tag-query": ".tag_name",
                        "version-query": "$tag | sub(\"^v\"; \"\")",
                        "timestamp-query": ".published_at",
                        "url-query": ".assets[] | select(.name==\"kopia-ui_\" + $version + \"_arm64.deb\") | .browser_download_url"
                    }
                },
                {
                    "type": "script",
                    "dest-filename": "kopia-ui.sh",
                    "commands": [
                        "export TMPDIR=\"$XDG_RUNTIME_DIR/app/$FLATPAK_ID\"",
                        "exec zypak-wrapper /app/KopiaUI/kopia-ui \"$@\""
                    ]
                },
                {
                    "type": "file",
                    "path": "io.kopia.KopiaUI.appdata.xml"
                }
            ]
        }
    ]
}
